  fbq('track','Purchase', 
    {
       contents: ecommerce.purchase.products,
       content_ids: ecommerce.purchase.products.map(p => p.id),
       content_name: ecommerce.purchase.products.map(p => p.name),
       content_type: 'product',
       value: ecommerce.purchase.actionField.revenue,
       currency: 'VND',
    }, 
    { 
